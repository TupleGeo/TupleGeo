<Window x:Class="TupleGeo.Apps.Presentation.Tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="80*" />
      <ColumnDefinition Width="20*" />
    </Grid.ColumnDefinitions>
    
    <Grid.RowDefinitions>
      <RowDefinition Height="31" />
      <RowDefinition Height="31" />
      <RowDefinition Height="31" />
      <RowDefinition Height="31" />
    </Grid.RowDefinitions>

    <Button x:Name="SetupObserver"
            Content="Setup Observer"
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            Margin="6,4,6,2"
            VerticalAlignment="Stretch"
            Click="SetupObserver_Click" />

    <Button x:Name="TestObserver"
            Content="Test Observer"
            Grid.Column="1"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Margin="6,2,6,2"
            VerticalAlignment="Stretch"
            Click="TestObserver_Click" />
    
  </Grid>
  
</Window>
